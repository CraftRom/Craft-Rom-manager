<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_margin="@dimen/l_50"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtTitle"
            android:text="@string/title_txt"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:textSize="@dimen/eighteen_sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/publication_author_txt"
                android:textAlignment="viewStart"
                android:textSize="@dimen/l_75"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtPubdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/publication_date_txt"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/l_75"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtContent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:text="content"
            android:textSize="@dimen/fourteen_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtLink"
            android:textStyle="normal"
            android:text="content"
            android:visibility="gone"
            android:textSize="@dimen/fourteen_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/butLink"
            android:text="@string/view_but"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


 </LinearLayout>